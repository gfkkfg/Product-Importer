# ---------------- PostgreSQL Database ---------------- #
DB_HOST=postgres       # For Docker, use your service name; locally can be 'localhost'
DB_PORT=5432
DB_NAME=acme_products
DB_USER=postgres
DB_PASSWORD=password

# ---------------- Celery / Redis ---------------- #
# If using Redis for local dev or Docker
CELERY_BROKER_URL=redis://redis:6379/0      # 'redis' is Docker service name
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ---------------- Flask / App Config ---------------- #
FLASK_ENV=production
SECRET_KEY=your_flask_secret_key

# ---------------- Optional Settings ---------------- #
CHUNK_SIZE=5000      # CSV chunk size
